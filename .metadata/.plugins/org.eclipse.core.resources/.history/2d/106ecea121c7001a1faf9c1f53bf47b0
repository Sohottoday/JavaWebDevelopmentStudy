package loopexample;

public class BreakContinueEx {

	public static void main(String[] args) {

		int sum = 0;
		int num;
		for(num=0; ; num++) {
			sum += num;
			if(sum >= 100) break;
		}
		System.out.println(sum);
		System.out.println(num);
		
		int num1;
		for(num1=0; num1<100; num1++) {
			if((num % 3) != 0) {		// 3의 배수만 출력하기 위한 조건식
				continue;
			}
			System.out.println(num1);
			
		}
		
	}

}
