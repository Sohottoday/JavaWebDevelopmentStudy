package streamex;

import java.io.IOException;

public class SystemInTest {

	public static void main(String[] args) {

		System.out.println("ют╥б : ");
		try {
			int i; 
			while(i = System.in.read() != '\n') {
				System.out.println((char)i);
			}
			System.out.println(i);
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
